<div class="dinamic-view-container">
    {{#if posts}}
        <h2>Latest posts</h2>
            <div>
                {{#each posts as | post |}}
                    <div class="post-container post" data-id="{{post.id}}">
                        <div class="post-user-container">
                            <a class="user-img-post">
                                <img class="image-cover-medium" src="{{post.creator.image}}">
                            </a>
                            <div class="post-content">
                                <h5>{{post.creator.username}}</h5>
                                <p>{{post.content}}</p>
                                {{#if post.media}}<img src="{{post.media}}" alt="Media uploaded" width="100px">{{/if}}
                                {{#if post.gif}}<img src="{{post.gif}}" alt="Gif uploaded" width="100px">{{/if}}
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
    {{else}}
        <h2>No posts liked yet &#128528</h1>
    {{/if}}
</div>